{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "proxy": "https://smalltalk.glitch.me",
  "dependencies": {
    "node-static": "^0.7.10",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.1.4",
    "tailwindcss": "^0.5.2",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "url-join": "^4.0.0",
    "typeface-karmilla": "github:dmfrancisco/typeface-karmilla"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run prod:start || npm run dev:start",
    "dev:start": "npm-run-all -p dev:start:css dev:start:js",
    "dev:start:css": "postcss src/css/index.css -o src/index.css -w",
    "dev:start:js": "react-scripts start",
    "prod:start": "static build --gzip",
    "build": "npm-run-all build:css build:js",
    "build:css": "postcss src/css/index.css -o src/index.css",
    "build:js": "react-scripts build && gzip -rk build && refresh"
  },
  "license": "MIT"
}